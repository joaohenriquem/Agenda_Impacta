        <TextBox x:Name="Descricao" HorizontalAlignment="Left" Height="40" Margin="115,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" Grid.ColumnSpan="2"/>
        <Label Content="Descrição" HorizontalAlignment="Left" Margin="41,188,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
